<?xml version="1.0" encoding="UTF-8"?>

<root xmlns="GUI-LIBRARY-HTML-SCHEMA">

    <link src="/assets/guilib/uis/defaults/defaults.yaml"/>
    <link src="/assets/guilib/uis/UIbui/styles.yaml"/>

    <body>
        <div id="mainContainer">

            <button id="backButton">
                <label>
                    x
                </label>
            </button>

            <div id="centerContainer" group="panel">
                <layout>
                    <label group="bui.title" maxTextLength="1000">Welcome to BUI</label>

                    <button group="buttons" id="detectedProjectsButton">
                        <label>
                            Detected Projects
                        </label>
                    </button>
                    <button group="buttons" id="x">
                        <label>
                            Developer Options
                        </label>
                    </button>
                    <layout group="buttonPair" direction="horizontal">
                        <button id="infoButton">
                            <label>
                                Info
                            </label>
                        </button>
                        <button group="warn" id="optionsButton">
                            <label>
                                Options
                            </label>
                        </button>
                    </layout>
                </layout>
            </div>
        </div>

    </body>

</root>

