{
  "type": "object",
  "properties": {
    "Version": {
      "type": "string",
      "default": "1.4.0",
      "description": "Here are the previous versions, YAML-CSS isn't retro-compatible",
      "enum": ["1.0.0", "1.1.0","1.2.0","1.3.0", "1.4.0", "1.4.1", "1.5.0"]
    },
    "Texture": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "path": {
          "type": "string"
        },
        "width": {
          "type": "integer"
        },
        "height": {
          "type": "integer"
        },
        "mode": {
          "type": "string",
          "enum": ["STRETCH", "NINE_SLICE", "TILE"]
        },
        "border": {
          "type": "object",
          "properties": {
            "top": {
              "type": "integer"
            },
            "bottom": {
              "type": "integer"
            },
            "left": {
              "type": "integer"
            },
            "right": {
              "type": "integer"
            }
          }
        }
      }
    },
    "Textures": {
      "type": "array",
      "items": {
        "allOf": [
          {
            "$ref": "#/properties/Texture"
          }
        ],
        "required": ["id"],
        "description": "List of textures"
      }
    },
    "SharedProperties": {
      "type": "object",
      "properties": {
        "backgroundColor": {
          "type": "string",
          "default": "transparent",
          "description": "The background color, use hex format #RRGGBB"
        },

        "backgroundImage": {
          "type": "string",
          "default": "transparent",
          "description": "Image as background of an element"
        },

        "backgroundImagePressed": {
          "type": "string",
          "default": "transparent",
          "description": "Image as background of an element"
        },

        "backgroundImageHover": {
          "type": "string",
          "default": "transparent",
          "description": "Image as background of an element"
        },

        "width": {
          "type": "string",
          "description": "The size in X axis of the element"
        },

        "height": {
          "type": "string",
          "description": "The size of the Y axis of the element"
        },

        "localX": {
          "type": "integer",
          "description": "Local X position relative to global X position of the parent of the element"
        },

        "localY": {
          "type": "integer",
          "description": "Local Y position relative to global Y position of the parent of the element"
        },

        "globalX": {
          "type": "integer",
          "description": "The global X position"
        },

        "globalY": {
          "type": "integer",
          "description": "The global Y position"
        },

        "childrenPlacement": {
          "type": "string",
          "enum": [
            "TOP_LEFT",
            "BOTTOM_LEFT",
            "TOP_RIGHT",
            "BOTTOM_RIGHT",
            "CENTER",
            "LEFT",
            "RIGHT",
            "TOP",
            "BOTTOM",
            "NONE",
            "CHILD_DECIDE"
          ],
          "description": "The placement of the children nodes relative to they parent"
        },

        "selfPlacement": {
          "type": "string",
          "enum": [
            "TOP_LEFT",
            "BOTTOM_LEFT",
            "TOP_RIGHT",
            "BOTTOM_RIGHT",
            "CENTER",
            "LEFT",
            "RIGHT",
            "TOP",
            "BOTTOM",
            "NONE",
            "CHILD_DECIDE"
          ],
          "description": "The placement of the children nodes relative to they parent"
        },

        "border": {
          "type": "string",
          "default": "none",
          "description": "The width of the border line and the color, example: 2px #RRGGBB"
        },

        "border-top": {
          "type": "string",
          "description": "The width of the top border line and the color, example: 2px #RRGGBB"
        },

        "border-bottom": {
          "type": "string",
          "description": "The width of the bottom border line and the color, example: 2px #RRGGBB"
        },

        "border-left": {
          "type": "string",
          "description": "The width of the left border line and the color, example: 2px #RRGGBB"
        },

        "border-right": {
          "type": "string",
          "description": "The width of the right border line and the color, example: 2px #RRGGBB"
        },

        "textColor": {
          "type": "string",
          "description": "The width of the border line and the color, example: 2px #RRGGBB"
        },

        "textShadow": {
          "type": "boolean",
          "description": "If you want shadow in your text..."
        },

        "lineHeight": {
          "type": "string",
          "description": "Line height in for label"
        },

        "direction": {
          "type": "string",
          "enum": ["vertically","horizontally"],
          "description": "The direction of a bar/scrollBar element"
        },

        "focusBackgroundColor": {
          "type": "string"
        },

        "focusTextColor": {
          "type": "string"
        },

        "focusBorderColor":{
          "type": "string"
        },

        "defaultBorderColor": {
          "type": "string"
        },

        "defaultBackgroundColor": {
          "type": "string"
        },

        "defaultTextColor": {
          "type": "string"
        },

        "drawBackground": {
          "type": "boolean"
        },

        "cursorBlinkInterval": {
          "type": "integer"
        },

        "cursorCharacter": {
          "type": "string"
        },

        "scrollBarLength": {
          "type": "integer"
        },

        "progressBarFullBackground": {
          "type": "string"
        },

        "progressBarSmoothingFactor": {
          "type": "number"
        },

        "pressedBorderColor": {
          "type": "string"
        },
        "pressedBackgroundColor": {
          "type": "string"
        },

        "scrollBarVisible": {
          "type": "boolean"
        },
        "thumbHeight": {
          "type": "string"
        },
        "thumbWidth": {
          "type": "string"
        },
        "scrollBarSize": {
          "type": "string"
        },
        "overflow": {
          "type": "string",
          "enum": ["hide","view"],
          "default": "view"
        },

        "scrollBarColor": {
          "type": "string"
        },
        "scrollBarThumbColor": {
          "type": "string"
        },
        "layoutSpacing": {
          "type": "string"
        },

        "layoutCenterItems": {
          "type": "boolean"
        },
        "layoutItemsFromCenter": {
          "type": "boolean",
          "default": false
        },
        "bgHeight": {
          "type": "string"
        },
        "bgWidth": {
          "type": "string"
        },
        "bgMode": {
          "type": "string",
          "enum": ["tile", "default"],
          "default": "default"
        },
        "imageScale": {
          "type": "string"
        },
        "imageScaleWidth": {
          "type": "string"
        },
        "imageScaleHeight": {
          "type": "string"
        }

      }
    },
    "Select": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "at": {
            "type": "string",
            "description": "Valor del atributo 'At'"
          }
        },
        "required": [
          "at"
        ],
        "allOf": [
          {
            "$ref": "#/properties/SharedProperties"
          }
        ]
      },
      "description": "Lista de objetos 'Select'"
    }
  }
}
